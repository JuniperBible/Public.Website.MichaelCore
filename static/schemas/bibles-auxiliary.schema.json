{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://focuswithjustin.com/schemas/bibles-auxiliary.schema.json",
  "title": "Bibles Auxiliary",
  "description": "Full Bible content for the Focus with Justin website",
  "type": "object",
  "required": ["bibles"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "bibles": {
      "type": "object",
      "description": "Map of Bible IDs to their full content",
      "additionalProperties": {
        "type": "object",
        "required": ["books"],
        "properties": {
          "content": {
            "type": "string",
            "description": "Introductory description for the Bible translation"
          },
          "books": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "chapters"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "OSIS book ID (e.g., Gen, Exod, Matt, Rev)"
                },
                "name": {
                  "type": "string",
                  "description": "Full book name"
                },
                "testament": {
                  "type": "string",
                  "enum": ["OT", "NT", "AP"],
                  "description": "Testament: OT (Old), NT (New), AP (Apocrypha/Deuterocanonical)"
                },
                "chapters": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["number"],
                    "properties": {
                      "number": {
                        "type": "integer",
                        "minimum": 1,
                        "description": "Chapter number"
                      },
                      "verses": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": ["number", "text"],
                          "properties": {
                            "number": {
                              "type": "integer",
                              "minimum": 1,
                              "description": "Verse number"
                            },
                            "text": {
                              "type": "string",
                              "description": "Verse text content"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "generated": { "type": "string", "format": "date-time" }
      }
    }
  }
}
