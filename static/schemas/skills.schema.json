{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://focuswithjustin.com/schemas/skills.schema.json",
  "title": "Skills",
  "description": "Professional skills metadata for the Focus with Justin website",
  "type": "object",
  "required": ["skills"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": {
            "type": "string",
            "description": "URL slug identifier",
            "pattern": "^[a-z0-9-]+$"
          },
          "title": {
            "type": "string",
            "description": "Skill display name"
          },
          "description": {
            "type": "string",
            "description": "Brief description for SEO and listings"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Schema version"
        },
        "lastModified": {
          "type": "string",
          "format": "date",
          "description": "Last modification date"
        }
      }
    }
  }
}
