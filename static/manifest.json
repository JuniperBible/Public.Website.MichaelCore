{
  "name": "Michael Bible Reader",
  "short_name": "Michael",
  "description": "Offline Bible reading and comparison",
  "start_url": "/bible/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui"],
  "orientation": "any",
  "theme_color": "#7a00b0",
  "background_color": "#e7ddc4",
  "lang": "en",
  "dir": "ltr",
  "categories": ["books", "education", "lifestyle"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "window": {
    "default_width": 800,
    "default_height": 1000,
    "resizable": false
  },
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Read Bible",
      "short_name": "Read",
      "url": "/bible/",
      "description": "Open Bible reader"
    },
    {
      "name": "Compare Translations",
      "short_name": "Compare",
      "url": "/bible/?mode=compare",
      "description": "Compare Bible translations side by side"
    }
  ]
}
